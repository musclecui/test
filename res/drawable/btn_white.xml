<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
				android:color="#000000" />
            <stroke
				android:width="1dp"
				android:color="#000000" />
            <corners
				android:radius="0dp" />
            <padding
				android:left="8dp"
				android:top="8dp"
				android:right="8dp"
				android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
				android:startColor="#000000"
				android:endColor="#000000"
				android:angle="270" />
            <stroke
				android:width="1dp"
				android:color="#fffffe" />
            <corners
				android:radius="0dp" />
            <padding
				android:left="8dp"
				android:top="8dp"
				android:right="8dp"
				android:bottom="8dp" />
        </shape>
        
        </item>
</selector>
